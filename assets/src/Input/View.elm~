--assets/src/Input/View.elm

module Input.View exposing (..)

import Html exposing (..)
import Html.Attributes exposing (..)
import Html.Events exposing (..)
import Messages exposing (..)
import Model exposing (..)

inputView : Model -> Html Msg
inputView model =
    case model.inputState of
        ThreadWaiting ->
            div [ id "togglePostForm" ][
                 text "[", a[onClick ShowInput][ text "Start a New Thread"],text "]"
            ]
        ThreadForm ->
            div [ id "input" ][
                 text "placeholder"
            ]

inputField : String -> Bool -> Html Msg
inputField name resizeable =
    if resizeable then
        div [class "inputRow"][
             div [class "inputLabel"][
                  text name
             ]
            ,textarea [class "inputField"]
        ]
    else
        div [class "inputRow"][
             div [class "inputLabel"][
                  text name
             ]
            ,input [class "inputField"]
        ]
