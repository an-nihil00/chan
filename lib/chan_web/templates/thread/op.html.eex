<% link = ChanWeb.Router.Helpers.board_thread_path(@conn, :show, @board_id, @thread_id)%>
<%= if @op.upload != nil do %>
    <img src=<%=ChanWeb.Router.Helpers.board_upload_path(@conn, :show, @board_id, @op.upload.id)%> class = "opImageThumb">
    <% end %>
<p class = "intro">
  <%= inputs_for @f, :threads, fn i -> %>
  <%= checkbox i, String.to_atom("#{@thread_id}") %>
  <%end%>
  <span class = "subject"><%= @subject%></span>
  <span class = "name">
    <%= @op.name%>
  </span>
  <span class = "timestamp">
  <%= @op.inserted_at%> <a href="<%= link%>">No.<%= @op.id%></a>
  </span>
  <a class = "button" href = "<%= link%>">Reply</a>
</p>
<a id = "<%= @op.id%>"></a>
  <p style="white-space: pre-line;"><%= ChanWeb.Formatting.as_html @op.comment %></p>


