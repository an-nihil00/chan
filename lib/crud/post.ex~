defmodule Crud.Post do
  use Ecto.Schema
  import Ecto.Changeset

  schema "posts" do
    field :content, :string
    field :id, :integer
    field :image, :string
    field :name, :string

    timestamps()
  end

  @doc false
  def changeset(post, attrs) do
    post
    |> cast(attrs, [:id, :name, :content, :image])
    |> validate_required([:id, :name, :content, :image])
  end
end
