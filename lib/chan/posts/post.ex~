defmodule Chan.Posts.Post do
  use Ecto.Schema
  import Ecto.Changeset

  schema "posts" do
    field :comment, :string
    field :image, :string
    field :name, :string

    timestamps()
  end

  @doc false
  def changeset(post, attrs) do
    post
    |> cast(attrs, [:name, :image, :comment])
    |> validate_required([:name, :image, :comment])
  end
end
